<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.galactic_quest.eersteopzet.FactoryScreen">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="0,1,2,3"
        android:id="@+id/tableLayout">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:id="@+id/factoryRowString">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Score"
                android:id="@+id/factoryScoreString"
                android:textColor="#3336ab"
                android:textSize="14dip"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:layout_column="0" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Crystal"
                android:id="@+id/factoryCrystalString"
                android:textColor="#3336ab"
                android:textSize="14dip"
                android:layout_alignParentEnd="false"
                android:layout_alignParentStart="false"
                android:layout_above="@+id/factoryTickString"
                android:layout_alignParentLeft="true"
                android:layout_column="1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Metal"
                android:id="@+id/factoryMetalString"
                android:textColor="#3336ab"
                android:textSize="14dip"
                android:layout_above="@+id/factoryScoreString"
                android:layout_alignParentLeft="true"
                android:layout_column="2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Tick"
                android:id="@+id/factoryTickString"
                android:textColor="#3336ab"
                android:textSize="14dip"
                android:layout_alignParentEnd="true"
                android:layout_above="@+id/factoryMetalString"
                android:layout_alignParentLeft="true"
                android:layout_column="3" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/factoryRowVars">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ScoreVar"
                android:id="@+id/factoryScoreVar"
                android:textColor="#3336ab"
                android:textSize="14dip"
                android:layout_column="0"
                android:layout_below="@+id/factoryTickVar"
                android:layout_centerHorizontal="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CrystalVar"
                android:id="@+id/factoryCrystalVar"
                android:textColor="#3336ab"
                android:textSize="14dip"
                android:layout_column="1"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MetalVar"
                android:id="@+id/factoryMetalVar"
                android:textColor="#3336ab"
                android:textSize="14dip"
                android:layout_above="@+id/factoryCrystalVar"
                android:layout_alignParentLeft="true"
                android:layout_column="2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TickVar"
                android:id="@+id/factoryTickVar"
                android:textColor="#3336ab"
                android:textSize="14dip"
                android:layout_column="3"
                android:layout_below="@+id/tableLayout"
                android:layout_alignEnd="@+id/tableLayout" />

        </TableRow>

    </TableLayout>





</RelativeLayout>
