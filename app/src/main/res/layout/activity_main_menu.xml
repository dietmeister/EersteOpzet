<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainMenu"
    android:backgroundTint="#000000"
    android:background="#000000">

    <Button
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="Log In"
        android:id="@+id/MainLoginButton"
        android:layout_marginTop="121dp"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="Leader board"
        android:id="@+id/MainLeaderBoardButton"
        android:layout_below="@+id/MainLoginButton"
        android:layout_alignStart="@+id/MainLoginButton" />

    <Button
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="Quit"
        android:id="@+id/MainQuitButton"
        android:layout_below="@+id/MainLeaderBoardButton"
        android:layout_alignStart="@+id/MainLeaderBoardButton" />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:id="@+id/imageView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/galacticquest" />

</RelativeLayout>
