<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainMenu"
    android:backgroundTint="#000000"
    android:background="#000000"
    android:id="@+id/BaseRelativeLayout">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="0,1,2,3"
        android:id="@+id/tableLayout">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:id="@+id/BaseRowString">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Score"
                android:id="@+id/baseScoreString"
                android:textColor="#3336ab"
                android:textSize="14dip"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:layout_column="0" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Crystal"
                android:id="@+id/baseCrystalString"
                android:textColor="#3336ab"
                android:textSize="14dip"
                android:layout_alignParentEnd="false"
                android:layout_alignParentStart="false"
                android:layout_above="@+id/baseTickString"
                android:layout_alignParentLeft="true"
                android:layout_column="1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Metal"
                android:id="@+id/baseMetalString"
                android:textColor="#3336ab"
                android:textSize="14dip"
                android:layout_above="@+id/baseScoreString"
                android:layout_alignParentLeft="true"
                android:layout_column="2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Tick"
                android:id="@+id/baseTickString"
                android:textColor="#3336ab"
                android:textSize="14dip"
                android:layout_alignParentEnd="true"
                android:layout_above="@+id/baseMetalString"
                android:layout_alignParentLeft="true"
                android:layout_column="3" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/BaseRowVars">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ScoreVar"
                android:id="@+id/baseScoreVar"
                android:textColor="#3336ab"
                android:textSize="14dip"
                android:layout_column="0"
                android:layout_below="@+id/baseTickVar"
                android:layout_centerHorizontal="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CrystalVar"
                android:id="@+id/baseCrystalVar"
                android:textColor="#3336ab"
                android:textSize="14dip"
                android:layout_column="1"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MetalVar"
                android:id="@+id/baseMetalVar"
                android:textColor="#3336ab"
                android:textSize="14dip"
                android:layout_above="@+id/baseCrystalVar"
                android:layout_alignParentLeft="true"
                android:layout_column="2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TickVar"
                android:id="@+id/baseTickVar"
                android:textColor="#3336ab"
                android:textSize="14dip"
                android:layout_column="3"
                android:layout_below="@+id/tableLayout"
                android:layout_alignEnd="@+id/tableLayout" />

        </TableRow>

    </TableLayout>

    <Button
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="News"
        android:id="@+id/baseButtonNews"
        android:layout_above="@+id/baseButtonFleet"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="Fleet"
        android:id="@+id/baseButtonFleet"
        android:layout_alignStart="@+id/baseButtonNews"
        android:layout_centerVertical="true" />

    <Button
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="Resources"
        android:id="@+id/baseButtonResources"
        android:layout_below="@+id/baseButtonFleet"
        android:layout_alignStart="@+id/baseButtonFleet" />

    <Button
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="Factory"
        android:id="@+id/baseButtonFactory"
        android:layout_below="@+id/baseButtonResources"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tick"
        android:id="@+id/basetickbutton"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
